<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".VerbsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:background="@drawable/card2_background">

        <TextView
            android:id="@+id/txt_verb_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="@string/verb_name"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_verb_name">

            <TextView
                android:id="@+id/txt_verb_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="218dp"
                android:text="@string/verb_description"
                android:textColor="@color/gray"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/img_example_verb"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="431dp"
                android:src="@drawable/example_img" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>